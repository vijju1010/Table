html
    head
    body 
        each unicorn in unicorns
            form(action="/updateitem" method="POST")
                input(type="hidden" value=unicorn.name name="name" )
                br
                input(type="datetime-local" value=unicorn.dob name="dob")
                br
                input(type="text" value=unicorn.loves.toString() name="loves")
                br
                input(type="text" value=unicorn.weight name="weight")
                br
                input(type="text" value=unicorn.gender name="gender")
                br
                input(type="text" value=unicorn.vampires name="vampires")
                br
                button() update
